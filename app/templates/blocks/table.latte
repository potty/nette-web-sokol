<div class="panel">

	<div class="panel-heading">
		<h3 class="panel-title">Tabulka</h3>
  	</div>
    
    <table class="table table-condensed panel-table">
    {foreach $table as $team}
	<tr n:class="$team['team'] == 'Věteřov' ? highlight">
	    <td>{$iterator->counter}.</td>
	    <td><a href="{link Team:single $team['team_id']}">{$team['team']}</a></td>
	    <td>{$team['matches']}</td>
	    <td>{$team['points']}</td>
	</tr>
    {/foreach}
    </table>
    
    <a href="{link Match:table}" class="alt-link">Detailní tabulka</a>
    
</div>